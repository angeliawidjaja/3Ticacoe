<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".app.player.choosecharacter2.ChooseCharacter2Activity">

    <data>
        <variable
            name="viewModel"
            type="com.example.tictactoe.app.player.choosecharacter2.ChooseCharacter2ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_player2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="SELECT PLAYER 2"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/et_player2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="25dp"
                android:hint="Enter your name"
                android:text="@={viewModel.inputName}"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/tv_player2_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:inputType="textPersonName"
                android:autofillHints=""
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_invalid_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.invalidNotif}"
                tools:text="Player name should not be empty!"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorRed"
                app:layout_constraintTop_toBottomOf="@id/et_player2"/>

            <Button
                android:id="@+id/btn_submit_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:text="SUBMIT"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/et_player2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorBlack"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/btn_submit_player2"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_existing_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="CHOOSE EXISTING PLAYER"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_existing_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>


</layout>